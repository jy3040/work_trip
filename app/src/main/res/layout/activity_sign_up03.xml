<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".SignUp03Activity">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="워크숍 취향을 선택해주세요"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#323232"
            android:layout_gravity="center"
            android:layout_marginTop="252dp"/>
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="50dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                    <CheckBox
                        android:id="@+id/thema1"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:paddingHorizontal="10dp"
                        android:background="@drawable/sign_up_check_style1"
                        android:text="활동적인"
                        android:textAlignment="center"
                        android:textColor="@drawable/sign_up_textcolor1"
                        android:button="@null" />

                    <CheckBox
                        android:id="@+id/thema2"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:paddingHorizontal="10dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/sign_up_check_style1"
                        android:text="탐구적인"
                        android:textAlignment="center"
                        android:textColor="@drawable/sign_up_textcolor1"
                        android:button="@null" />

                    <CheckBox
                        android:id="@+id/thema3"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:paddingHorizontal="10dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/sign_up_check_style1"
                        android:text="정적인"
                        android:textAlignment="center"
                        android:textColor="@drawable/sign_up_textcolor1"
                        android:button="@null" />

                    <CheckBox
                        android:id="@+id/thema4"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:paddingHorizontal="10dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/sign_up_check_style1"
                        android:text="체험적인"
                        android:textAlignment="center"
                        android:textColor="@drawable/sign_up_textcolor1"
                        android:button="@null" />

                    <CheckBox
                        android:id="@+id/thema5"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:paddingHorizontal="10dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/sign_up_check_style1"
                        android:text="학문적인"
                        android:textAlignment="center"
                        android:textColor="@drawable/sign_up_textcolor1"
                        android:button="@null" />
            </LinearLayout>

        </HorizontalScrollView>

        <ImageButton
            android:id="@+id/ib_next"
            android:layout_width="320dp"
            android:layout_height="56.5dp"
            android:background="@drawable/sign_up_button_style1"
            android:layout_gravity="center"
            android:layout_marginTop="260dp"/>
    </LinearLayout>
</layout>