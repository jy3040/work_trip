<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".SignUp02Activity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="200.35dp"
                android:layout_height="55.46dp"
                android:layout_marginTop="80dp"
                android:background="@drawable/logo1"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="47.12dp"
                android:text="회사명"
                android:textSize="11sp"
                android:textColor="#9D9D9D"/>

            <EditText
                android:id="@+id/et_company"
                android:layout_width="320dp"
                android:layout_height="49.75dp"
                android:layout_gravity="center"
                android:background="@drawable/line1_round_12"
                android:hint="초대 메일로 받은 회사명을 기입해주세요"
                android:textColorHint="#9D9D9D"
                android:textSize="13sp"
                android:paddingLeft="24dp"
                android:layout_marginTop="3dp"/>
            <TextView
                android:id="@+id/et_company_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="52dp"
                android:text=""
                android:visibility="gone"
                android:textSize="11sp"
                android:textColor="#5D81FF"
                android:layout_marginTop="7dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="47.12dp"
                android:text="부서명"
                android:textSize="11sp"
                android:textColor="#9D9D9D"
                android:layout_marginTop="25dp"/>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="49.75dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:background="@drawable/line1_round_12">
                <EditText
                    android:id="@+id/et_department"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:hint="ex) 마케팅 2팀"
                    android:background="#FFFFFF"
                    android:textColorHint="#9D9D9D"
                    android:textSize="13sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="24dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_department_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="52dp"
                android:text=""
                android:visibility="gone"
                android:textSize="11sp"
                android:textColor="#5D81FF"
                android:layout_marginTop="7dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="47.12dp"
                android:text="직급"
                android:textSize="11sp"
                android:textColor="#9D9D9D"
                android:layout_marginTop="25dp"/>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="49.75dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:background="@drawable/line1_round_12">
                <EditText
                    android:id="@+id/et_position"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:textColorHint="#9D9D9D"
                    android:textSize="13sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="24dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/et_position_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="52dp"
                android:text="영문, 숫자, 특수문자 포함 12자 이내"
                android:visibility="invisible"
                android:textSize="11sp"
                android:textColor="#5D81FF"
                android:layout_marginTop="7dp"/>
        </LinearLayout>
        <ImageButton
            android:id="@+id/ib_next"
            android:layout_width="320dp"
            android:layout_height="56.5dp"
            android:background="@drawable/sign_up_button_style1"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"/>
    </LinearLayout>
</layout>