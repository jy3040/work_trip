<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment_plan">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="16dp">

            <TextView
                android:id="@+id/plan_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="7"
                android:maxLines="1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="일정 추가"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <android.widget.Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/frame_background"
                android:backgroundTint="@color/main_blue_light"
                android:text="완료"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:paddingVertical="2dp"
                android:paddingHorizontal="12dp"/>

        </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_marginHorizontal="16dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="47.12dp"
                    android:text="일정 이름"
                    android:textSize="11sp"
                    android:textColor="#9D9D9D"/>

                <EditText
                    android:id="@+id/plan_name"
                    android:layout_width="320dp"
                    android:layout_height="49.75dp"
                    android:layout_gravity="center"
                    android:background="@drawable/line1_round_12"
                    android:hint="ex) 기획팀 친목도모 워크숍"
                    android:textColorHint="#9D9D9D"
                    android:textSize="13sp"
                    android:paddingLeft="24dp"
                    android:layout_marginTop="3dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="47.12dp"
                    android:text="출발일"
                    android:textSize="11sp"
                    android:textColor="#9D9D9D"
                    android:layout_marginTop="25dp"/>

                <LinearLayout
                    android:layout_width="320dp"
                    android:layout_height="49.75dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:background="@drawable/line1_round_12">
                    <EditText
                        android:id="@+id/plan_departure"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:maxLength="12"
                        android:background="#FFFFFF"
                        android:textColorHint="#9D9D9D"
                        android:textSize="13sp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="24dp"/>
                    <ImageButton
                        android:id="@+id/calender_plan_departure"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@drawable/calendar_blue"
                        android:layout_gravity="center"
                        android:layout_marginLeft="13dp"/>
                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="47.12dp"
                    android:text="도착일"
                    android:textSize="11sp"
                    android:textColor="#9D9D9D"
                    android:layout_marginTop="25dp"/>

                <LinearLayout
                    android:layout_width="320dp"
                    android:layout_height="49.75dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:background="@drawable/line1_round_12">
                    <EditText
                        android:id="@+id/plan_return"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:inputType="textPassword"
                        android:maxLength="12"
                        android:textColorHint="#9D9D9D"
                        android:textSize="13sp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="24dp"/>

                    <ImageButton
                        android:id="@+id/calender_plan_return"
                        android:layout_width="15dp"
                        android:layout_height="14dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="13dp"
                        android:background="@drawable/calendar_blue" />

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>