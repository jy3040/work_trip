<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment_home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    tools:context="MainActivity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:orientation="vertical"
                        android:background="@drawable/main_background1">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="50dp">

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                />

                            <ImageButton
                                android:id="@+id/main_participant_mode"
                                android:layout_width="58dp"
                                android:layout_height="32dp"
                                android:layout_gravity="right"
                                android:layout_marginRight="16dp"
                                android:background="@drawable/participant_mode"/>

                            <ImageButton
                                android:id="@+id/main_notification"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_gravity="right"
                                android:layout_marginRight="16dp"
                                android:background="@drawable/notifications_white"/>
                        </LinearLayout>

                        <!--...........................................................-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:orientation="horizontal">

                            <ImageButton
                                android:id="@+id/search"
                                android:layout_width="320dp"
                                android:layout_height="49.75dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginTop="30dp"
                                android:background="@drawable/search_bar_text" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                />

                            <ImageButton
                                android:id="@+id/search_setting"
                                android:layout_width="49.75dp"
                                android:layout_height="49.75dp"
                                android:layout_marginTop="30dp"
                                android:layout_marginRight="16dp"
                                android:background="@drawable/search_setting" />
                        </LinearLayout>

                        <!--...........................................................-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_gravity="center_vertical">

                            <ImageButton
                                android:id="@+id/category_lodging"
                                android:layout_width="61dp"
                                android:layout_height="95dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginTop="30dp"
                                android:background="@drawable/category_lodging"/>

                            <ImageButton
                                android:id="@+id/category_course"
                                android:layout_width="65dp"
                                android:layout_height="95dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginTop="30dp"
                                android:background="@drawable/category_course"/>

                            <ImageButton
                                android:id="@+id/category_program"
                                android:layout_width="65dp"
                                android:layout_height="95dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginTop="30dp"
                                android:background="@drawable/category_program" />

                            <ImageButton
                                android:id="@+id/category_food"
                                android:layout_width="61dp"
                                android:layout_height="95dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginTop="30dp"
                                android:background="@drawable/category_food"/>

                            <ImageButton
                                android:id="@+id/category_vehicle"
                                android:layout_width="61dp"
                                android:layout_height="95dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginTop="30dp"
                                android:background="@drawable/category_vehicle"/>
                        </LinearLayout>

                    </LinearLayout>

                    <!--...........................................................-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="24dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginTop="24dp"
                                android:text="추천 코스"
                                android:textColor="#000000"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <ImageButton
                                android:id="@+id/recommended_course_details"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginRight="16dp"
                                android:background="@drawable/arrow_right_black" />

                        </LinearLayout>

                        <!--카드: java로 다시 구현 예정-->
                        <HorizontalScrollView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/recommended_course_cards"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                            </LinearLayout>
                        </HorizontalScrollView>

                        <!--...........................................................-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="24dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginTop="24dp"
                                android:text="추천 프로그램"
                                android:textColor="#000000"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <ImageButton
                                android:id="@+id/recommended_program_details"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginRight="16dp"
                                android:background="@drawable/arrow_right_black" />

                        </LinearLayout>

                        <!--카드: java로 다시 구현 예정-->
                        <HorizontalScrollView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/recommended_prgram_cards"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <!--카드 자리-->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="24dp"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginTop="24dp"
                                    android:text="추천 프로그램"
                                    android:textColor="#dddddd"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                            </LinearLayout>
                        </HorizontalScrollView>

                        <!--...........................................................-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="24dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginTop="24dp"
                                android:text="추천 맛집"
                                android:textColor="#000000"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <ImageButton
                                android:id="@+id/recommended_food_details"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginRight="16dp"
                                android:background="@drawable/arrow_right_black" />

                        </LinearLayout>

                        <!--spinner-->

                        <!--카드: java로 다시 구현 예정-->
                        <ScrollView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/recommended_food_cards"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="24dp"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginTop="24dp"
                                    android:text="추천 맛집"
                                    android:textColor="#dddddd"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />



                                <!--카드 자리-->

                            </LinearLayout>

                        </ScrollView>

                    </LinearLayout>



                </LinearLayout>



            </LinearLayout>

        </ScrollView>

    </LinearLayout>


</FrameLayout>